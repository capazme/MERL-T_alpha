{
  "info": {
    "name": "MERL-T API",
    "description": "AI-powered legal research and analysis system",
    "version": "0.2.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "merl-t-api-collection"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{api_key}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Query Execution",
      "item": [
        {
          "name": "Execute Legal Query",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/query/execute",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "query",
                "execute"
              ]
            },
            "description": ""
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
}